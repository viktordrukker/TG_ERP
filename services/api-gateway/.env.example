# Server Configuration
NODE_ENV=development
PORT=3000

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3001
ORG_SERVICE_URL=http://org-service:3002
COMMUNICATION_SERVICE_URL=http://communication-service:3003
PROJECT_SERVICE_URL=http://project-service:3004
WORKPLACE_SERVICE_URL=http://workplace-service:3005
ANALYTICS_SERVICE_URL=http://analytics-service:3006

# JWT Configuration (for token verification)
JWT_SECRET=your_jwt_secret_for_development_only

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100 # 100 requests per window

# Logging
LOG_LEVEL=debug
